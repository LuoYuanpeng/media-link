/**index.wxss**/
.container {
  position: relative;
}
.banner {
  position: relative;
  height:390rpx;
  width: 100%;
}
.index_bg {
  width: 100%;
  height: 100%;
}
.content {
  position: absolute;
  top: 0;
  width: 690rpx;
  height:100%;
  opacity:1;
  margin: 0 auto;
  margin-top: 10rpx;
  display:-webkit-flex;
  -webkit-flex-direction: column;
  display:flex;
  flex-direction:column;
}
.content_nav {
  display: flex;
  height: 120rpx;
  width: 100%;
  margin: 40rpx auto;
}
.integrate,.user_num {
  height: 100%;
  width: 50%;
}
.content_nav text{
  display: block;
  height: 50%;
  line-height: 60rpx;
  color: #fff;
}
.integrate_title {
  text-indent: 20rpx;
  font-size: 20rpx;
}
.integrate_num {
  text-indent: 20rpx;
  font-size: 46rpx;
}
.user_title {
  text-indent: 120rpx;
  font-size: 20rpx;
}
.num_box {
  height: 50%;
}
.user_icon {
  height: 35rpx;
  width: 35rpx;
  margin-left:42px;
  vertical-align: middle;
  margin-top: 10rpx;
}
.user_text {
  float: right;
  margin-right: 12rpx;
  font-size: 46rpx;
}
.main_wrapper {
  flex: 1;
  margin-top:60rpx;
  background-color:#fff;
  border-radius:15rpx;
  box-shadow:0 0 10px #c3c3c3;
}
.main_title {
  display: flex;
  height: 80rpx;
  border-bottom: 1rpx solid #ddd;
}
.info_wrapper {
  float: left;
  width: 150rpx;
  height: 100%;
}
.info_icon {
  height: 30rpx;
  width: 30rpx;
  margin: 27rpx 55rpx;
}
.info_content {
  flex: 1;
  float: left;
  height: 100%;
  overflow: hidden;
  background-color: #F5F5F5;
  border-radius: 0 15rpx 0 0;
}

.info_content-wrapper {
  width: 97%;
  height: 100%;
  overflow: hidden;
  position: relative;
}
.info_word_one {
  display: inline-block;
  position: absolute;
  left: 0;
}
.info_content text {
  display: inline-block;
  position: absolute;
  white-space:nowrap;
  padding: 28rpx 0;
  font-size: 20rpx;
}
.scroll_box {
  height: 750rpx;
  overflow: hidden;
}
.list {
  height: 180rpx;
  border-bottom: 1rpx solid #ddd;
}
.list_inner {
  height: 120rpx;
  padding: 30rpx 0;
}
.list_inner text{
  line-height: 120rpx;
  color: #333333;
}
.list_icon {
  float: left;
  height: 120rpx;
  width: 120rpx;
  margin-left: 15rpx;
}
.list_name {
  font-size: 30rpx;
  margin-left: 30rpx;
}
.list_mvp {
  font-size: 26rpx;
  margin-left: 55rpx;
}
.list_index {
  display: block;
  float: right;
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  background-color:rgb(252, 245, 151);
  color: #F5A623;
  line-height: 50rpx;
  font-size: 30rpx;
  text-align: center;
  margin-top: 39rpx;
  margin-right: 45rpx;
}
.footer_wrapper {
  position: fixed;
  bottom: 20rpx;
  width: 690rpx;
  height: 100rpx;
}
.scan {
  display: block;
  float: left;
  height: 100%;
  width: 550rpx;
  color: #fff;
  background-color:#40C1CB;
}
.scan image {
  height: 45rpx;
  width: 45rpx;
  margin-right: 15rpx;
  vertical-align: middle;
}
.scan text {
    vertical-align: middle;
}
.person_wrapper {
  float: right;
}
.person_wrapper image {
  float:right;
  height:115rpx;
  width:115rpx;
  margin-top:-6rpx;
}

/**遮罩层样式**/
.mask {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background: rgba(0,0,0,0.5);
  opacity: .5;
}
#dialog {
  position: absolute;
  height: 900rpx;
  width: 630rpx;
  left: 50%;
  transform: translate(-50%);
  z-index: 999;
  top: 80rpx;
}
.dia_bg {
  height: 100%;
  width: 100%;
}
.dia_main {
  position: absolute;
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
}
.dia_main text {
  display: block;
  width: 100%;
  text-align: center;
}
.dia_header {
  height: 100rpx;
  width: 500rpx;
  margin: 0 auto;
  margin-top: 160rpx;
}
.dia_title {
  font-size: 40rpx;
  color: #40C1CB;
  padding-top: 25rpx;
}
.dia_sub {
  padding: 14rpx 0;
  font-size: 26rpx; 
  font-family: PingFang-SC-W3;
}

.dia_content {
  height: 450rpx;
  width: 100%;
  margin-top: 65rpx;
}
.invite_title_eng {
  position: relative;
  width: 100%;
  font-size: 40rpx;
  text-align: center;
  height: 100rpx;
  line-height: 140rpx;
  color:#dbdbdb;
}
  .invite_title_eng::after {
  position: absolute;
  content:'';
  display: block;
  width: 85rpx;
  height: 8rpx;
  background-color: #dbdbdb;
  left: 50%;
  transform: translate(-50%);
  top: 25rpx;
}  

.invite_title_cha {
  font-family: "PingFang-SC-W3";
  padding-top: 20rpx;
  font-size: 40rpx;
}
.dia_input {
  display: flex;
  width: 460rpx;
  height: 80rpx;
  margin: 0 auto;
  padding: 25rpx 0;
}
.dia_input input {
  display: block;
  height: 100%;
  width: 80rpx;
  background-color: #EEEEEE;
  border-radius: 15rpx;
   text-align: center; 
   color: #40C1CB;
}
.dia_input view {
  flex: 1;
}
.tip {
  font-size: 23rpx;
  color:#bababa;
  padding: 30rpx 0;
}
.join_btn {
  width: 480rpx;
  border-radius: 15rpx;
  height:75rpx;
  line-height:75rpx;
  font-size:35rpx;
  background-color: #40C1CB;
  color: #fff;
}
.jumb_code {
  padding-top: 30rpx;
  font-size: 22rpx;
  color: #9c9c9c;
}

  /**loading**/
  .loading {
    height:120rpx;
    text-align: center;
    line-height:120rpx;
    font-size: 26rpx;
  }