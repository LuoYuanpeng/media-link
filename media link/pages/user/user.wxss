/* pages/user/user.wxss */
page {
  background-color: #F9F9F9;
}
.user_header {
  height: 440rpx;
  width: 100%;
}
.user_bg {
  height: 440rpx;
  width: 100%;
}
.user_info {
  position: absolute;
  top: 0;
  height: 390rpx;
  width: 100%;
  background: rgba(0,0,0,0);
  z-index: 999;
} 

.user_pic {
  display: block;
  margin: 0 auto;
  height: 180rpx;
  width: 180rpx;
  margin-top: 70rpx;
}
.user_name {
  display: block;
  width: 100%;
  color: #fff;
  padding: 15rpx 0;
  font-size:26rpx;
  letter-spacing: 5rpx;
  text-align: center;
}
.signature {
  display: block;
  margin: 0 auto;
  margin-top: 10rpx;
  width:180rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  background-color: #fff;
  border-radius: 25rpx;
  font-size: 18rpx;
  color: #333;
}

/**main**/
.main {
  width: 100%;
}
.select_list {
  width: 100%;
  margin-top:20rpx;
}
.select_item {
  width: 100%;
  height: 90rpx;
  background-color: #fff;
}
.item_active{
  background-color: #eeeeee;
}
.select_text {
  font-size: 30rpx;
  padding-left: 20rpx;
  line-height: 90rpx;
}
.select_icon {
  display: block;
  float: right;
  margin-top:30rpx;
  margin-right: 20rpx;
  height: 40rpx;
  width: 15rpx;
}

.invitecode_list {
  width: 100%;
  margin-top: 20rpx;
}

/**遮罩层样式**/
.mask {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background: rgba(0,0,0,0.5);
  opacity: .5;
  z-index: 9999;
}
.close_wrapper {
  position: absolute;
  top:50rpx;
  right: 40rpx;
  height: 70rpx;
  width: 70rpx;
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  z-index: 10000;
}
.close_icon {
  height: 50rpx;
  width: 50rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
}
.dialog {
  position: absolute;
  height: 900rpx;
  width: 630rpx;
  left: 50%;
  transform: translate(-50%);
  z-index: 9999;
  top: 130rpx;
}
.dia_bg {
  height: 100%;
  width: 100%;
}
.dia_main {
  position: absolute;
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
}
.dia_main text {
  display: block;
  width: 100%;
  text-align: center;
}
.dia_header {
  height: 100rpx;
  width: 500rpx;
  margin: 0 auto;
  margin-top: 160rpx;
}
.dia_title {
  font-size: 40rpx;
  color: #40C1CB;
  padding-top: 25rpx;
}
.dia_sub {
  padding: 14rpx 0;
  font-size: 26rpx; 
  font-family: PingFang-SC-W3;
}

.dia_content {
  height: 450rpx;
  width: 100%;
  margin-top: 65rpx;
}
.invite_title_eng {
  position: relative;
  width: 100%;
  font-size: 40rpx;
  text-align: center;
  height: 100rpx;
  line-height: 140rpx;
  color:#dbdbdb;
}
  .invite_title_eng::after {
  position: absolute;
  content:'';
  display: block;
  width: 85rpx;
  height: 8rpx;
  background-color: #dbdbdb;
  left: 50%;
  transform: translate(-50%);
  top: 25rpx;
}  

.invite_title_cha {
  font-family: "PingFang-SC-W3";
  padding-top: 20rpx;
  font-size: 40rpx;
}
.dia_input {
  display: flex;
  width: 460rpx;
  height: 80rpx;
  margin: 0 auto;
  padding: 25rpx 0;
}
.dia_input input {
  display: block;
  height: 100%;
  width: 80rpx;
  border-radius: 15rpx;
   text-align: center; 
   color: #40C1CB;
}

.my_code {
  background-color: #fff;
}
.entry_code {
  background-color: #EEEEEE;
}
.dia_input view {
  flex: 1;
}
.tip {
  font-size: 23rpx;
  color:#bababa;
  padding: 30rpx 0;
}
.join_btn {
  width: 480rpx;
  border-radius: 15rpx;
  height:75rpx;
  line-height:75rpx;
  font-size:35rpx;
  background-color: #40C1CB;
  color: #fff;
}
.jumb_code {
  padding-top: 30rpx;
  font-size: 22rpx;
  color: #9c9c9c;
}